        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpIgual" />

    <Button
        android:id="@+id/buttonOpIgual"
        android:layout_width="57dp"
        android:layout_height="57dp"
