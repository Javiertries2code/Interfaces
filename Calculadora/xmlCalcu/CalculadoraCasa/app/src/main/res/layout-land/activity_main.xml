<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_land"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/buttonOpMasMenos"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:layout_marginTop="130dp"
        android:background="@drawable/selector_operator"
        android:backgroundTint="@null"
        android:text="+-"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpResta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonOpPercent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/buttonOpPercent"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:background="@drawable/selector_operator"
        android:backgroundTint="@null"
        android:text="%"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpSuma"
        app:layout_constraintEnd_toStartOf="@+id/buttonOpMasMenos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonOpIgual"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/buttonOpC"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_operator"
        android:backgroundTint="@null"
        android:text="C"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOpCE"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_operator"
        android:backgroundTint="@null"
        android:text="CE"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpMasMenos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpC" />

    <Button
        android:id="@+id/buttonOpSuma"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:background="@drawable/selector_operator"
        android:backgroundTint="@null"
        android:text="+"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpDiv"
        app:layout_constraintEnd_toStartOf="@+id/buttonOpResta"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonOpPunto"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpPercent" />

    <Button
        android:id="@+id/button0"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
        android:layout_marginBottom="@dimen/land_botton"
        android:background="@drawable/selector_number"
        android:backgroundTint="@null"
        android:text="0"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonOpDiv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpPunto" />

    <Button
        android:id="@+id/buttonOpPunto"
        android:layout_width="@dimen/number_width"
        android:layout_height="@dimen/number_height"
