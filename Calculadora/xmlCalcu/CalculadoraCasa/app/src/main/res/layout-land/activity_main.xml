        app:layout_constraintBottom_toTopOf="@+id/buttonOpPunto"
        app:layout_constraintEnd_toStartOf="@+id/buttonOpPercent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
